#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
void input(char *w)
{
	printf("uppercase = ? ");
	scanf("%s", w);
}
void output(char *w)
{
	printf("lower case = %s", w);
}
void word(char *w)
{
	int i = 0;

	while (1) {
		if (*(w + i) == '\0') break;
		if (*(w + i) >= 'A' && *(w + i) <= 'Z') {
			*(w + i) = *(w + i) + 32;
		}
		else if (*(w + i) >= 'a' && *(w + i) <= 'z') {
			*(w + i) = *(w + i) - 32;
		}
		i++;
	}
}
int main()
{
	char w[100];

	input(w);
	word(w);
	output(w);

	return 0;
}
